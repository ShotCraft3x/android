<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:background="@color/md_green_A700">


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/Imag"
        android:layout_width="230dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:scaleType="centerCrop"
        app:lottie_rawRes="@raw/robot_alerta"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"

        />
    <TextView
        android:id="@+id/desp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="El PIN protege tu informacion almacenada en safety y solo tÃº puedes acceder a ella."
        android:textColor="@color/design_default_color_surface"
        android:layout_below="@id/Imag"
        android:textSize="20dp" />


    <EditText
        android:id="@+id/txt_pin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/desp"
        android:textColor="@color/design_default_color_surface"
        android:layout_alignParentStart="true"
        android:hint="****"
        android:inputType="textPassword"
        android:textSize="30dp"/>
    <TextView
        android:id="@+id/caracter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="El PIN debe constar al menos de 4 cifras"
        android:textColor="@color/design_default_color_surface"
        android:layout_below="@id/txt_pin"
        android:textSize="15sp" />

</RelativeLayout>
